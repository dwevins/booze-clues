<div class="app">
  {{#unless userIsOfAge}}
    {{#modal-dialog translucentOverlay=true overlay-class='age-conf-bg'}}
      <div class="modal-head">
        Age confirmation
      </div>
      <p>You must be 21 years of age or older to use this website.</p>
      <button class='waves-effect waves-light btn account__buttons--btn' {{action 'allowUserToEnter'}}>I'm over 21</button>
      <button class='waves-effect waves-light btn account__buttons--btn' {{action 'blockUserFromSite'}}>I'm under 21</button>
    {{/modal-dialog}}
  {{/unless}}
  <nav class="side-pane">
    <div class="container">
      <div class="side-pane__content">
        <div class="logo">
          {{#link-to 'index'}}
            <img src="http://www.fillmurray.com/g/200/100" alt="" class="logo-img">
          {{/link-to}}
        </div>
        <div class="side-links">
          <div class="side-links__link">
            {{#link-to 'index.featured' class= "links"}}Featured{{/link-to}}
          </div>
          <div class="side-links__link">
            {{#link-to 'index.browse' class= "links"}}Browse{{/link-to}}
          </div>
          <div class="side-links__link">
            {{#link-to 'index.cabinet' class= "links"}}Cabinet{{/link-to}}
          </div>
        </div>
        <div class="side__buttons">
          <button class="side__buttons__clicks" {{action "toggleLoginModal"}}>Login</button>
          <button class="side__buttons__clicks" {{action "toggleRegisterModal"}}>Register</button>

        </div>

        {{!-- <div class="site-info">
          <p class="copyright">Designed by James Ridley and Woody Evins</p>
          <p class="data-source">Data sourced from
            <a href="http://www.absolut.com/us/" class="absolout-link">Absolut</a>
          </p>
          <p class="made-with">
            Made using
            <a href="http://emberjs.com/" class="ember-link">Ember</a>
            and
            <a href="http://materializecss.com/" class="materialize-link">Materialize</a>
          </p>
          <p class="disclaimer">Please drink responsibly</p>
        </div> --}}
      </div>
    </div>

  </nav>

  <div class="flash-messages">
    {{#each flashMessages.queue as |flash|}}
      {{#flash-message flash=flash class="success-message" as |message|}}
        <p>{{flash.message}}</p>
      {{/flash-message}}
    {{/each}}
  </div>

  <div class="display-pane">
    {{#if isRegisterModalVisible}}
      {{#modal-dialog translucentOverlay=true}}
        <div class="modal-head">
          <h3 class="login-register">Register</h3>
        </div>

        {{#simple-form onsubmit=(action 'registerUser') as |registerValues|}}
          {{input value=registerValues.username placeholder='Username'}}
          {{input value=registerValues.email placeholder='Email' id="email" type="email" class="validate"}}
          {{input type='password' value=registerValues.password placeholder='Password'}}
          <div class="register-buttons">
            <a class="clicks" {{action "toggleRegisterModal"}}>Cancel</a>
            <button type="submit" class="clicks">Register</button>
          </div>
        {{/simple-form}}

      {{/modal-dialog}}
    {{/if}}
    {{#if isLoginModalVisible}}
      {{#modal-dialog translucentOverlay=true}}
        <h3 class= "login-register">Login</h3>
        {{#simple-form onsubmit=(action 'login') as |loginValues|}}
          {{input value=loginValues.email placeholder='Email' id="email" type="email" class="validate"}}
          {{input type='password' value=loginValues.password placeholder='Password'}}
          <div class="register-buttons">
            <a class="clicks" {{action "toggleLoginModal"}}>Cancel</a>
            <button type="submit" class="clicks">Login</button>
          </div>
        {{/simple-form}}
      {{/modal-dialog}}
    {{/if}}
    {{outlet}}
  </div>
</div>
